{% macro search( name = "All", btn_class = "btn_class",
                items = [{ link: "#", name: "Action" },
                         { link: "#", name: "Action 2" }],
                sep = true,
                sep_item = { link: "#", name: "A final item"},
                id = "search-btn-1" ) %}
  <div class="input-group">
      <div class="input-group-btn">
        <button type="button" class="btn {{ btn_class }} dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ name }} <span class="caret"></span></button>
        <ul class="dropdown-menu">
            {% for item in items%}
                <li><a href="{{ item.link }}">{{ item.name }}</a></li>
            {% endfor %}
            {% if sep %}
                <li role="separator" class="divider"></li>
                <li><a href="{{ sep_item.link }}">{{ sep_item.name }}</a></li>
            {% endif %}
        </ul>
      </div><!-- /btn-group -->
    <input type="text" class="form-control" aria-label="...">
    <a href="index.html" type="button" class="input-group-addon btn btn-primary"><i class="fa fa-search"></i> Search</a>
  </div><!-- /input-group -->
{% endmacro %}