{# page variables #}
{% set page_title = "Assets" %}

{% extends "index_assets.njk"%}

{% block content %}
<div class="row">
    <div class="col-sm-6">
      <div id="breadcrumb" class="mb-10" style="padding-left: 0px; margin-top: 30px;">
        <span class="youarehere"></span>
        <span class="breadcrumb-text">
          <a href="index.html" class="breadcrumb-active"></a>
          <span class="breadcrumb-text">
            <a href="master_page_location" class="breadcrumb-active">
              {{master_page_name}}</a>/
            <span class="breadcrumb-current-page">
              {{page_title}}
            </span>
          </span>
        </span>
      </div>
    </div>

    {% include "partials/_page_actions.njk" %}

    <div class="col-lg-12">
      <div class="card__standard">
        <div class="row mt-15">
          <div class="col-sm-6">
            <div class="input-group mb-3 input-lg f-l">
              <input type="text" class="form-control" placeholder="Search Agreements" aria-label="search"
              aria-describedby="basic-addon2">
            </div>
          </div>
          <div class="col-sm-6">
            <button class="mdc-button--raised f-r" href="#">
              <a class="mdc-button__label">Import Agreements</a>
            </button>
          </div>
        </div>
        <div class="table-responsive mt-15">
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Company Name</th>
                <th scope="col">Category</th>
                <th scope="col">Sub-Category</th>
                <th scope="col" class="ta-c">Actions</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Pickit</td>
                <td>Software & Cloud</td>
                <td>Imaging</td>
                <td>
                  <button class="mdc-button f-r" href="#">
                    <div class="mdc-button__ripple"></div>
                    <i class="material-icons mdc-button__icon" aria-hidden="true">search</i>
                    <span class="mdc-button__label">View</span>
                  </button>
                </td>
              </tr>
              <tr>
                <td>Microsoft 365 Business</td>
                <td>Software & Cloud</td>
                <td>Office</td>
                <td>
                  <button class="mdc-button f-r" href="#">
                    <div class="mdc-button__ripple"></div>
                    <i class="material-icons mdc-button__icon" aria-hidden="true">search</i>
                    <span class="mdc-button__label">View</span>
                  </button>
                </td>
              </tr>
              <tr>
                <td>Microsoft Azure Subscription</td>
                <td>Software & Cloud</td>
                <td>Cloud</td>
                <td>
                  <button class="mdc-button f-r" href="#">
                    <div class="mdc-button__ripple"></div>
                    <i class="material-icons mdc-button__icon" aria-hidden="true">search</i>
                    <span class="mdc-button__label">View</span>
                  </button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

{% endblock %}